#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <string.h>
#include <stdlib.h>
struct Person{
char name[40];
int age;
char address[100];
};
int main(){
    struct Person *p1 = malloc(sizeof(struct Person));
    strcpy(p1->name, "김민재");
    p1->age = 26;
    strcpy(p1->address, "경기도 시흥시 신천동");
    printf("이름: %s\n", p1->name);
    printf("나이: %d\n", p1->age);
    printf("주소: %s\n", p1->address);
    free(p1);
    return 0;
}
